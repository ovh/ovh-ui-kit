{
  "name": "ovh-ui-kit",
  "version": "2.41.1",
  "description": "A LESS stylekit for the OVH brand.",
  "license": "BSD-3-Clause",
  "scripts": {
    "build:version": "cross-conf-env sed -e 's/${tmpl-npm-version}/npm_package_version/' packages/oui/_version.tmpl.less > packages/oui/_version.less",
    "build:less:oui": "lessc --remcalc packages/oui/_dist.less dist/oui.css",
    "build:less:oui-min": "lessc --remcalc --clean-css packages/oui/_dist.less dist/oui.min.css",
    "build:less:olt": "lessc --remcalc --clean-css packages/ovhcloud-light-theme/_dist.less dist/oui-olt.css",
    "build:fonts": "cpx \"packages/oui-typography/fonts/**/*.{eot,svg,ttf,woff,woff2}\" \"dist/fonts\"",
    "build:icons": "mkdirp ./dist/icons && yarn build:icons-generator && node ./scripts/generate-icons-indexes.js",
    "build:icons-generator": "icon-font-generator ./packages/oui-icons/svg/*.svg -p oui-icon -o ./dist/icons -t span --types \"woff, woff2\" --center --normalize",
    "build": "rimraf dist && yarn build:version && yarn build:fonts && yarn build:icons && run-p build:less:*",
    "test": "echo \"no tests for this project\"",
    "lint:css": "stylelint 'packages/**/*.less' --fix",
    "lint": "yarn lint:css",
    "commit": "npm-scripts-config commit",
    "commitmsg": "npm-scripts-config commitmsg",
    "version": "yarn build && git add dist packages/oui-icons/_icons.less packages/oui/_version.less && npm-scripts-config version",
    "postversion": "git push && git push --tags",
    "preview-changelog": "npm-scripts-config preview-changelog"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "dependencies": {
    "less-plugin-remcalc": "^0.1.0"
  },
  "devDependencies": {
    "chalk": "^2.4.1",
    "cpx": "^1.5.0",
    "cross-conf-env": "^1.1.2",
    "flatpickr": "^4.5.7",
    "icon-font-generator": "^2.1.9",
    "less": "^3.8.1",
    "less-plugin-clean-css": "^1.5.1",
    "mkdirp": "^0.5.1",
    "npm-run-all": "^4.1.5",
    "npm-scripts-config": "^0.0.2",
    "npm-scripts-conventional-changelog": "^0.1.0",
    "rimraf": "^2.6.2",
    "stylelint": "^9.6.0",
    "stylelint-config-standard": "^18.2.0"
  }
}
