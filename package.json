{
  "name": "ovh-ui-kit",
  "version": "2.29.0",
  "private": true,
  "description": "A set of maintainable components for the OVH ecosystem",
  "license": "BSD-3-Clause",
  "workspaces": [
    "packages/apps/*",
    "packages/components/*",
    "packages/core",
    "packages/libs/*",
    "packages/vendors/*"
  ],
  "scripts": {
    "build": "lerna run build --parallel",
    "commit": "npm-scripts-config commit",
    "commitmsg": "npm-scripts-config commitmsg",
    "lint": "npm run lint:js && npm run lint:css",
    "lint:css": "stylelint 'packages/**/*.less'",
    "lint:js": "eslint ./packages",
    "version": "npm run build && git add dist packages/components/_core/_icons.less packages/base/less/_version.less && npm-scripts-config version",
    "postversion": "git push && git push --tags",
    "prepare": "lerna run prepare --parallel",
    "preview-changelog": "npm-scripts-config preview-changelog",
    "start": "lerna exec --scope @ovh/ui-kit-documentation -- yarn start",
    "test": "cross-env NODE_ENV=test babel-node ./node_modules/karma/bin/karma start --reporters spec,coverage --single-run",
    "test:watch": "cross-env NODE_ENV=test BABEL_ENV=test node -r babel-register ./node_modules/karma/bin/karma start --watch",
    "watch": "lerna exec --scope @ovh/ui-kit -- yarn watch"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "devDependencies": {
    "angular": "^1.7.7",
    "angular-aria": "^1.7.7",
    "angular-mocks": "^1.7.7",
    "angular-sanitize": "^1.7.7",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-eslint": "^8.2.6",
    "babel-plugin-angularjs-annotate": "^0.10.0",
    "babel-plugin-istanbul": "^5.1.1",
    "babel-plugin-lodash": "^3.3.4",
    "babel-plugin-syntax-dynamic-import": "^6.18.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-stage-2": "^6.24.1",
    "babel-register": "^6.26.0",
    "cross-env": "^5.2.0",
    "eslint": "^5.14.1",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-friendly-formatter": "^4.0.1",
    "eslint-plugin-import": "^2.16.0",
    "jasmine-core": "^3.3.0",
    "karma": "^4.0.0",
    "karma-coverage": "^1.1.2",
    "karma-jasmine": "^2.0.1",
    "karma-phantomjs-launcher": "^1.0.4",
    "karma-spec-reporter": "^0.0.32",
    "lerna": "^3.13.0",
    "npm-scripts-config": "^0.0.2",
    "npm-scripts-conventional-changelog": "^0.1.0",
    "stylelint": "^9.10.1",
    "stylelint-config-standard": "^18.2.0"
  }
}
